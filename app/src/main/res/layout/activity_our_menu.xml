<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090000"
    tools:context=".OurMenuActivity">

    <ImageView
        android:id="@+id/imgBurger"
        android:layout_width="274dp"
        android:layout_height="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <TextView
        android:id="@+id/tvBeefBurger"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="Beef Burger   ........"
        android:textColor="#FBF6F6"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBurger" />

    <TextView
        android:id="@+id/tvPrice1"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:text=" Ksh 658"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBeefBurger"
        app:layout_constraintTop_toTopOf="@+id/tvBeefBurger" />

    <TextView
        android:id="@+id/tvMackees"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Mackees   ......."
        android:textColor="#F6EDED"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tvPrice2"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBeefBurger" />

    <TextView
        android:id="@+id/tvPrice2"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginEnd="56dp"
        android:text="Ksh 870"
        android:textColor="#F3EBEB"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMackees"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMackees" />

    <ImageView
        android:id="@+id/imgShakes"
        android:layout_width="233dp"
        android:layout_height="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMackees"
        app:srcCompat="@drawable/drinks" />

    <TextView
        android:id="@+id/tvNutella"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Nutella    ........."
        android:textColor="#F4ECEC"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgShakes" />

    <TextView
        android:id="@+id/tvPrice3"
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:layout_marginEnd="56dp"
        android:text="Ksh 345"
        android:textColor="#F8F1F1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNutella"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toEndOf="@+id/tvNutella"
        app:layout_constraintTop_toTopOf="@+id/tvNutella"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvVelvet"
        android:layout_width="172dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Bloody Velvet ......"
        android:textColor="#F4F4F4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNutella" />

    <TextView
        android:id="@+id/tvPrice4"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:text="Ksh 475"
        android:textColor="#F6F0F0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvVelvet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toEndOf="@+id/tvVelvet"
        app:layout_constraintTop_toTopOf="@+id/tvVelvet" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/btnNext3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVelvet" />

    <Button
        android:id="@+id/btnNext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="88dp"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack2"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>